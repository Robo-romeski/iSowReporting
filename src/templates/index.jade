extends ./layout.jade
block content
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        .col-lg-12
          h1.page-header
            | Dashboard 
            small Statistics Overview
          ol.breadcrumb
            li.active
              i.fa.fa-dashboard
              |  Dashboard
      // /.row
      .row
        .col-lg-12
          
      .row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              h3.panel-title
                i.fa.fa-bar-chart-o.fa-fw
                |  Area Chart
            .panel-body
              #morris-area-chart
              #query-output-graph
        // /.row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              h3.panel-title
                i.fa.fa-bar-chart-o.fa-fw
                |  Area Chart
            .panel-body
              // <div id="morris-area-chart"></div>
              button#auth-button(hidden='') Authorize
              textarea#query-output(cols='80', rows='20')
              textarea#query-output-json(cols='80', rows='20')
              #query-output-graph
        // /.row
        .row
          .col-lg-4
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  i.fa.fa-long-arrow-right.fa-fw
                  |  Donut Chart
              .panel-body
                #morris-donut-chart
                .text-right
                  a(href='#')
                    | View Details 
                    i.fa.fa-arrow-circle-right
          .col-lg-4
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  i.fa.fa-clock-o.fa-fw
                  |  Tasks Panel
              .panel-body
                .list-group
                  a.list-group-item(href='#')
                    span.badge just now
                    i.fa.fa-fw.fa-calendar
                    |  Calendar updated
                  a.list-group-item(href='#')
                    span.badge 4 minutes ago
                    i.fa.fa-fw.fa-comment
                    |  Commented on a post
                  a.list-group-item(href='#')
                    span.badge 23 minutes ago
                    i.fa.fa-fw.fa-truck
                    |  Order 392 shipped
                  a.list-group-item(href='#')
                    span.badge 46 minutes ago
                    i.fa.fa-fw.fa-money
                    |  Invoice 653 has been paid
                  a.list-group-item(href='#')
                    span.badge 1 hour ago
                    i.fa.fa-fw.fa-user
                    |  A new user has been added
                  a.list-group-item(href='#')
                    span.badge 2 hours ago
                    i.fa.fa-fw.fa-check
                    |  Completed task: "pick up dry cleaning"
                  a.list-group-item(href='#')
                    span.badge yesterday
                    i.fa.fa-fw.fa-globe
                    |  Saved the world
                  a.list-group-item(href='#')
                    span.badge two days ago
                    i.fa.fa-fw.fa-check
                    |  Completed task: "fix error on sales page"
                .text-right
                  a(href='#')
                    | View All Activity 
                    i.fa.fa-arrow-circle-right
          .col-lg-4
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  i.fa.fa-money.fa-fw
                  |  Transactions Panel
              .panel-body
                .table-responsive
                  
                  div
                    table
                      tr
                        for result in data
                          td #{result.name} 
                          td #{result.id} 
                .text-right
                  a(href='#')
                    | View All Transactions 
                    i.fa.fa-arrow-circle-right
          // /.row
        // /.container-fluid
      // /#page-wrapper
    // /#wrapper
    // jQuery
    script(src='js/jquery.js')
    // Angular
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')
    // Morris Charts JavaScript
    script(src='js/plugins/morris/raphael.min.js')
    script(src='js/plugins/morris/morris.min.js')
    script(src='js/plugins/morris/morris-data.js')
    script(src='js/google.js')
    script(src='js/dbquery.js')
    script(src='https://apis.google.com/js/client.js?onload=authorize')

