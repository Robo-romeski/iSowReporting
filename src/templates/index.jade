extends ./layout.jade
block content
  #page-wrapper
    .container-fluid
      // Page Heading
      .row
        .col-lg-12
          h1.page-header
            | Dashboard 
            small Statistics Overview
          ol.breadcrumb
            li.active
              i.fa.fa-dashboard
              |  Dashboard
      // /.row
      .row
        .col-lg-12
          
      .row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              h3.panel-title
                i.fa.fa-bar-chart-o.fa-fw
                |  Area Chart
            .panel-body
              #morris-area-chart
              #query-output-graph
        // /.row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              h3.panel-title
                i.fa.fa-bar-chart-o.fa-fw
                |  Area Chart
            .panel-body
              // <div id="morris-area-chart"></div>
              button#auth-button(hidden='') Authorize
              textarea#query-output(cols='80', rows='20')
              textarea#query-output-json(cols='80', rows='20')
              #query-output-graph
        // /.row
        .row
          .col-lg-4
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  i.fa.fa-long-arrow-right.fa-fw
                  |  Org Tracking
              .panel-body
                #morris-donut-chart
                .text-right
                  a(href='#')
                    //- | View Details 
                    //- i.fa.fa-arrow-circle-right
          .col-lg-4
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  i.fa.fa-clock-o.fa-fw
                  |  Top Users
              .panel-body
                .list-group
                  for results in data
                    a.list-group-item(href='#')
                      span.badge #{results.id}
                      i.fa.fa-fw.fa-calendar
                      | #{results.name}
                .text-right
                  a(href='#')
                    //- | View All Activity 
                    //- i.fa.fa-arrow-circle-right
          .col-lg-4
            .panel.panel-default
              .panel-heading
                h3.panel-title
                  i.fa.fa-money.fa-fw
                  |  Newest Transactions
              .panel-body
                .table-responsive
                  
                  div
                    table
                      tr
                        // for result in data
                        //td #{result.name} 
                        //td #{result.id} 
                .text-right
                  a(href='#')
                    //- | View All Transactions 
                    //- i.fa.fa-arrow-circle-right
          // /.row
        // /.container-fluid
      // /#page-wrapper
    // /#wrapper
